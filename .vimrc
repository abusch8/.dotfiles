filetype plugin indent on
syntax on

set number
set relativenumber

set numberwidth=4
set tabstop=4
set shiftwidth=4
set expandtab
set smartindent

set scrolloff=4
set sidescrolloff=8

set spell
set spelllang=en_us

set smartcase
set ignorecase

set nowrap
set breakindent
set formatoptions=l
set lbr

set termguicolors

set title

let &t_SI = "\e[6 q"
let &t_EI = "\e[2 q"

